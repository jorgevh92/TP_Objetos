import fixture.*
import tipoDeHabilidades.*

test "Una familia puede acceder a una propiedad" {

	var depto=fixture.crearDepto(15,15,50)

	//----------creo una familia--------------
	var lopez=fixture.crearFamilia()
		
	var leandro=fixture.crearPersona("Leandro",32,electricista)
	var maria=fixture.crearPersona("Maria",30,decoradora)
	
	leandro.podesTrabajar(10,depto)
	maria.podesTrabajar(5,depto)
	
	lopez.agregarPersona(leandro)
	lopez.agregarPersona(maria)
	
	//-----------creo otra familia--------------
	var perez=fixture.crearFamilia()
	
	var esteban=fixture.crearPersona("Esteban",32,desordenado)
	var paola=fixture.crearPersona("Paola",30,decoradora)
	
	esteban.podesTrabajar(2,depto)
	paola.podesTrabajar(5,depto)
	
	perez.agregarPersona(esteban)
	perez.agregarPersona(paola)
	
	//-----------creo otra familia------------
	var britos=fixture.crearFamilia()
	
	var manuel=fixture.crearPersona("Manuel",45,electricista)
	var noelia=fixture.crearPersona("Noelia",46,decoradora)
	var micaela=fixture.crearPersona("Micaela",18,desordenado)
	
	manuel.podesTrabajar(8,depto)
	noelia.podesTrabajar(5,depto)
	micaela.podesTrabajar(5,depto)
	
	britos.agregarPersona(manuel)
	britos.agregarPersona(noelia)
	britos.agregarPersona(micaela)
	
	//agrego familias participantes
	depto.agregarFamilia(lopez)
	depto.agregarFamilia(perez)
	depto.agregarFamilia(britos)
	
	
	assert.equals([lopez], depto.familiasHabilitadas())
	
	
}