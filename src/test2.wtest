import fixture.*
import tipoDeHabilidades.*

test "Hacer que una persona trabaje"{
	
	var casa=fixture.crearCasa(45,50,2)
	var persona=fixture.crearPersona("Fernando", 21, electricista)
	
	persona.podesTrabajar(5, casa)
	
	assert.equals(6, persona.cantHorasTrabajadas())
	
}

test "Hacer que una persona trabaje y no pueda (Menor de 18 años)"{
	
	var casa=fixture.crearCasa(45,50,2)
	var persona=fixture.crearPersona("Fernando", 14, electricista)
	
	assert.throwsException(persona.podesTrabajar(5,casa))
	//assert.equals(45, casa.horasTrabajoRestantes())
	
}

